<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.videomeeting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoMeeting"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".activities.AttendanceActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OnlineMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PdfUnlockActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ViewNotesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UploadNotesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TeacherNotesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SignUpStudentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SignInTeacherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SelectUserActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoadingActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StartScreenTeacherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StartScreenStudentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SignInStudentActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpTeacherActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>